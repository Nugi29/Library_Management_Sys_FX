<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.RegisterFormController"
            prefHeight="532.0" prefWidth="750.0">

    <children>
        <TextField fx:id="txtUsername" layoutX="300.0" layoutY="103.0" promptText="Username" />
        <TextField fx:id="txtEmail" layoutX="300.0" layoutY="152.0" promptText="Email" />
        <PasswordField fx:id="txtPassword" layoutX="300.0" layoutY="198.0" promptText="Password" />
        <PasswordField fx:id="txtCfmPassword" layoutX="299.0" layoutY="247.0" promptText="Confirm Password" />
        <Label layoutX="205.0" layoutY="28.0" prefHeight="35.0" prefWidth="339.0" text="Register Form for new Admin">
            <font>
                <Font name="System Bold Italic" size="24.0" />
            </font>
        </Label>
        <Button fx:id="btnRegister" layoutX="450.0" layoutY="303.0" mnemonicParsing="false" onAction="#btnRegisterOnAction" style="-fx-background-color: red; -fx-background-radius: 50px;" text="Register" textFill="WHITE">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>
    </children>

</AnchorPane>
